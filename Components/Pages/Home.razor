@page "/"
@inject ExercisesClient Client

<PageTitle>Exercise manager</PageTitle>

<div class="mt-2">
    <a class="btn btn-primary" role="button" href="/editexercise">New Exercise</a>
</div>

@if(exercises is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class = "table table-striped table-bordered table-hover mt-5">
        <thead class="table-dark">
            <th>Id</th>
            <th>Exercise</th>
            <th>Genre</th>
            <th>Till date</th>
            <th>Done date</th>
            <th>
            </th>
        </thead>
        <tbody>
            @foreach(var exercise in exercises)
            {
                <tr>
                    <td>@exercise.Id</td>
                    <td>@exercise.Exercise</td>
                    <td>@exercise.Genre</td>
                    <td>@exercise.Till</td>
                    <td>

                    </td>
                    <td>
                        <div class="d-flex">
                            <a class="btn btn-primary me-2" role="button" href="@ExerciseUrl(exercise.Id)">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <button class="btn btn-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="@GetDeleteModalId(exercise)">
                                <i class="bi bi-x-square"></i>
                            </button>
                        </div>
                        <DeleteExercise Exercise="@exercise" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code{
    private ExerciseSummary[]? exercises; 

    protected override async Task OnInitializedAsync()
    {
        exercises = await Client.GetExercisesAsync();
    } 

    private static string ExerciseUrl(int id) => $"/editexercise/{id}";

    private string GetDeleteModalId(ExerciseSummary exercise)
    {
        return $"#{DeleteExercise.GetModalId(exercise)}";
    }
}
