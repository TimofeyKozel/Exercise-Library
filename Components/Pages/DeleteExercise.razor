@inject ExercisesClient Client
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="modal fade" id="@GetModalId(Exercise)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">@title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button"
                class="btn btn-primary"
                data-bs-dismiss="modal"
                @onclick="@Confirm">Delete</button>
      </div>
    </div>
  </div>
</div>

@code
{
    [Parameter]
    public ExerciseSummary? Exercise{ get; set; }

    private string title = string.Empty;

    protected override void OnParametersSet()
    {
        title = "Would you like to delete exercise " + "\"" + Exercise?.Exercise + "\"";
    }

    public static string GetModalId(ExerciseSummary? exercise)
    {
        ArgumentNullException.ThrowIfNull(exercise);
        return $"deleteModal-{exercise.Id}";
    } 

    private void Confirm(){
        Client.DeleteExercise(Exercise!.Id);
        NavigationManager.Refresh();
    }
}
